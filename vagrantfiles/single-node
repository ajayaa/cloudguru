# Single node openstack vagrantfile

VAGRANTFILE_API_VERSION = "2" 

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vm.box = "mybox1"
  config.vm.network :private_network, ip:"192.168.100.10"
  config.vm.network :private_network, ip:"192.168.110.10"
  config.vm.network :private_network, ip:"192.168.120.10"
  config.vm.host_name = 'node1'
  config.vm.provider :virtualbox do |vb|
    vb.customize ["modifyvm", :id, "--memory", "1900"]
  end 
end
